@model HabitAqui.Models.Administrador

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5 ">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Apagar Administrador</h3>
        </div>
        <div class="card-body">
            <h4>Tem a certeza de que quer apagar este Administrador?</h4>
            <dl class="row">
                <dd>Nome: @Html.DisplayFor(model => model.Name)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="AdministradorId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="ListUsers" asp-controller="Administradores" class="btn btn-secondary" data-dismiss="modal">Voltar</a>
            </form>
        </div>
    </div>
</div>


