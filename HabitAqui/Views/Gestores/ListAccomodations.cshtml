@model IEnumerable<HabitAqui.Models.Habitacao>
@{
    ViewData["Title"] = "List Accommodations";
}

<h1>List of Accommodations</h1>

<div class="row">
    @foreach (var accomodation in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@accomodation.Localizacao</h5>
                    <p class="card-text">Period: @accomodation.PeriodoMinimoArrendamento - @accomodation.PeriodoMaximoArrendamento months</p>
                    <p class="card-text">Cost: $@accomodation.Custo</p>
                    @if (accomodation.MediaAvaliacao.HasValue)
                    {
                        <p class="card-text">Average Rating: @accomodation.MediaAvaliacao</p>
                    }
                    <p class="card-text">Category: @(accomodation.Categoria != null ? accomodation.Categoria.Nome : "Not specified")</p>
                    <p class="card-text">Active: @accomodation.Ativo</p>
                    <a href="@Url.Action("Details", "Accommodation", new { id = accomodation.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
