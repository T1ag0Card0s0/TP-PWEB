@model HabitAqui.ViewModels.ListEmployeesViewModel


<div class="container">

    <h1>Lista de Utilizadores</h1>

    <h2>Gestores <a asp-area="Identity" asp-page="/Account/RegisterGestor" class="btn btn-link">Criar Novo</a></h2>
 
    <div class="row m-auto">
    @foreach (var gestor in Model.Gestores)
    {
        <div class="col-md-3">
            <div class="card border-dark mb-3" style="width:18rem;">
                <div class="card-body">
                    <h5 class="card-title">@gestor.Nome</h5>
                    <p class="card-text">
                        ID: @gestor.GestorId
                    </p>
                    <p class="card-text">
                        Email: @gestor.ApplicationUser.Email
                    </p>
                    <p class="card-text">
                        Locador: @gestor.Locador.Nome
                    </p>
                    <p class="card-text">
                        <a asp-action="Edit" asp-controller="Gestores" asp-route-id="@gestor.GestorId" class="btn btn-secondary">Editar</a>
                        <a asp-action="Delete" asp-controller="Gestores" asp-route-id="@gestor.GestorId" class="btn btn-danger">Apagar</a>
                    </p>
                </div>
            </div>
        </div>
    }
    </div>
    <h2>Funcionarios <a asp-area="Identity" asp-page="/Account/RegisterFunc" class="btn btn-link">Criar Novo</a></h2>
    <div class="row m-auto">
    @foreach (var funcionario in Model.Funcionarios)
     {
        <div class="col-md-3">
            <div class="card border-dark mb-3" style="width:18rem;">
                <div class="card-body">
                    <h5 class="card-title">@funcionario.Nome</h5>
                    <p class="card-text">
                        ID: @funcionario.FuncionarioId
                    </p>
                    <p class="card-text">
                        Email: @funcionario.ApplicationUser.Email
                    </p>
                    <p class="card-text">
                        Locador: @funcionario.Locador.Nome
                    </p>
                    <p class="card-text">
                        <a asp-action="Edit" asp-controller="Funcionarios" asp-route-id="@funcionario.FuncionarioId" class="btn btn-secondary">Editar</a>
                        <a asp-action="Delete" asp-controller="Funcionarios" asp-route-id="@funcionario.FuncionarioId" class="btn btn-danger">Apagar</a>
                    </p>
                </div>
            </div>
        </div>
     }
     </div>

    <h2>Locadores</h2>
    <div class="row m-auto">
    @foreach (var locador in Model.Locadores)
    {
        <div class="col-md-3">
            <div class="card border-dark mb-3" style="width:18rem;">
                <div class="card-body">
                    <h5 class="card-title">@locador.Nome</h5>
                    <p class="card-text">
                        ID: @locador.LocadorId
                    </p>
                    <p class="card-text">
                        Email: 
                    </p>
                    <p class="card-text">
                        <a asp-action="Edit" asp-controller="Locadores" asp-route-id="@locador.LocadorId" class="btn btn-secondary">Editar</a>
                        <a asp-action="Delete" asp-controller="Locadores" asp-route-id="@locador.LocadorId" class="btn btn-danger">Apagar</a>
                    </p>
                </div>
            </div>
        </div>
    }
    </div>
    <h2>Clientes</h2>
    <div class="row m-auto">
    @foreach (var cliente in Model.Clientes)
    {
        <div class="col-md-3">
            <div class="card border-dark mb-3" style="width:18rem;">
                <div class="card-body">
                    <h5 class="card-title">@cliente.Nome</h5>
                    <p class="card-text">
                        ID: @cliente.ClienteId
                    </p>
                    <p class="card-text">
                        Email: @cliente.ApplicationUser.Email
                    </p>
                    <p class="card-text">
                        <a asp-action="Edit" asp-controller="Clientes" asp-route-id="@cliente.ClienteId" class="btn btn-secondary">Editar</a>
                        <a asp-action="Delete" asp-controller="Clientes" asp-route-id="@cliente.ClienteId" class="btn btn-danger">Apagar</a>
                    </p>
                </div>
            </div>
        </div>
    }
    </div>
</div>
