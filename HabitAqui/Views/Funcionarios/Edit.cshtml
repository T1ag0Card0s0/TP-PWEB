@model HabitAqui.Models.Funcionario

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5 ">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Editar Funcionário</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FuncionarioId" />
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                <a asp-action="ListUsers" asp-controller="Administradores" class="btn btn-secondary">Voltar</a>
            </form>
        </div>
    </div>
</div>

