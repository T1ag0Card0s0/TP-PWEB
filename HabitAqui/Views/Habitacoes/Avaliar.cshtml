@model HabitAqui.Models.AvaliacaoHabitacao

@{
    ViewData["Title"] = "Avaliar";
}

<h1>Avaliar Habitação</h1>

<h4>Avaliação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Habitacoes" asp-action="Avaliar" asp-route-id="@Model.HabitacaoId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="HabitacaoId" />

            <div class="form-group">
                <label asp-for="Classificacao" class="control-label"></label>
                <input asp-for="Classificacao" class="form-control" />
                <span asp-validation-for="Classificacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Avaliar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Arrendamentos" asp-action="ListClienteArrendamentos">Voltar</a>
</div>
