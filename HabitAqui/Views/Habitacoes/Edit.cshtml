@model HabitAqui.Models.Habitacao

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">
    <h4 class="mb-4">Editar Habitacao</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="PeriodoMinimoArrendamento" class="form-label">Período Mínimo de Arrendamento</label>
                    <input asp-for="PeriodoMinimoArrendamento" class="form-control" />
                    <span asp-validation-for="PeriodoMinimoArrendamento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PeriodoMaximoArrendamento" class="form-label">Período Máximo de Arrendamento</label>
                    <input asp-for="PeriodoMaximoArrendamento" class="form-control" />
                    <span asp-validation-for="PeriodoMaximoArrendamento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Custo" class="form-label">Custo</label>
                    <input asp-for="Custo" class="form-control" />
                    <span asp-validation-for="Custo" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Ativo" />
                    <label class="form-check-label" for="Ativo">@Html.DisplayNameFor(model => model.Ativo)</label>
                </div>

                <div class="mb-3">
                    <label asp-for="Localizacao" class="form-label">Localização</label>
                    <input asp-for="Localizacao" class="form-control" />
                    <span asp-validation-for="Localizacao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label">Categoria</label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-secondary" asp-action="Listar">Voltar</a>
    </div>
</div>


