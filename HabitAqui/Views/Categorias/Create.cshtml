@model HabitAqui.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h4 class="mb-4">Criar Categoria</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" type="text" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </div>
</div>