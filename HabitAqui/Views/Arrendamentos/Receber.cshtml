@model HabitAqui.ViewModels.RecebeHabitacaoViewModel

@{
    ViewData["Title"] = "Receber";
}

<div class="container mt-5">
    <h4>Receber Arrendamento</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Receber" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Equipamentos Opcionais</label>
                    <div>
                        @foreach (var equipamento in ViewBag.Equipamentos)
                        {
                            <div class="form-check">
                                <label class="form-check-label">
                                    @equipamento.Nome - Estado:
                                    <select class="form-control" name="EquipamentoEstado[@equipamento.Id]">
                                        <option value="BOM">Bom</option>
                                        <option value="DANIFICADO">Danificado</option>
                                        <option value="EM_FALTA">Em falta</option>
                                    </select>
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Funcionário:</label>
                    <div>
                        <select class="form-control" name="FuncionarioRecebeuId">
                            @foreach (var funcionario in ViewBag.Funcionarios)
                            {
                                <option value="@funcionario.FuncionarioId">@funcionario.Nome</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Observacoes" class="control-label">Observações:</label>
                    <textarea asp-for="Observacoes" class="form-control"></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Danos" class="control-label">Danos:</label>
                    <textarea asp-for="Danos" class="form-control" id="danos"></textarea>
                    <span asp-validation-for="Danos" class="text-danger"></span>
                </div>

                <div class="form-group" id="fotosDanosGroup" style="display: none;">
                    <label class="control-label">Fotos dos Danos:</label>
                    <input type="file" name="danosFotos" multiple class="form-control-file">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Receber</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var danosTextarea = document.getElementById('danos');
            var fotosDanosGroup = document.getElementById('fotosDanosGroup');

            danosTextarea.addEventListener('input', function () {
                fotosDanosGroup.style.display = danosTextarea.value.trim() !== '' ? 'block' : 'none';
            });
        });
    </script>
</div>
